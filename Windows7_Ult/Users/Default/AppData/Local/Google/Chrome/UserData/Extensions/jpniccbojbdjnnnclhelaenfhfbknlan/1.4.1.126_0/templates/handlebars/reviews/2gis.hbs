<div class="ext-comments ext-comments-flamp js-ext-comments-flamp">
    <h1 class="title">{{loc '__reviews'}}</h1>
    {{> reviews_list}}
    <div class="new-comments animated"></div>
    {{#if showMoreCommentsButton}}
        <div class="more-comments js-more-comments">
            <a class="gis-more-reviews js-gis-more-reviews" href="javascript:;">{{loc '__more_reviews'}}</a>
            <a class="gis-read-all-reviews"
               data-ga-invoke="_TBAllReviewsClick"
               data-reg-bc-url="{{data.reviews.reg_bc_url}}"
               href="{{data.reviews.flampReviewsLink}}">{{loc '__read_all_reviews_{count}' data.reviews.flampReviewsCount}}</a>
            <div class="spinner">
                <div class="bounce1"></div>
                <div class="bounce2"></div>
                <div class="bounce3"></div>
            </div>
        </div>
    {{/if}}
</div>